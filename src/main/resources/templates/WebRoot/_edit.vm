#set ( $DLR = "$")
<%@ page language="java" contentType="text/html; charset=UTF-8"  pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url("${pj.Images.Edit}") !important;
        }
        button[type=submit]{
        }
    </style>
</head>
<body class="bg-light">
<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>编辑$entity.name</h2>
        </div>

        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form method="POST" action="${entity.id}EditServlet">
                    <div class="row g-3">
                        #foreach( $field in $entity.Fields )
                            <div class="col-12">
                                <label for="$field.NameEn" class="form-label">$field.NameCn</label>
                                ##如果有外键就载入一个下拉框
                                #if($field.hasForeignKey())
                                    <select name="$field.NameEn" id="$field.NameEn" class="form-select">
                                        <option value="${DLR}{${entity.asVar}.${field.id}}">${DLR}{${entity.asVar}.${field.id}}</option>
                                        <c:forEach items="${DLR}{${field.getForeignKey().Table}_list}" var="${field.getForeignKey().Table}">
                                            <option value="$DLR{${field.getForeignKey().Table}.id}">$DLR{${field.getForeignKey().Table}.toString()}</option>
                                        </c:forEach>
                                    </select>
                                #else
                                    <input type="${field.getInputType()}" class="form-control" id="$field.NameEn" name="$field.NameEn"
                                           placeholder="$field.NameCn" value="${DLR}{${entity.asVar}.${field.id}}" required
                                        ##如果是第一个（编号）则禁止编辑
                                        #if($foreach.index==0)
                                           readonly
                                        #end
                                    >
                                #end
                            </div>
                        #end

                    </div>
                    <button class="w-100 btn btn-lg" type="submit">更改$entity.name</button>
                </form>
            </div>
        </div>
    </main>
</div>
</body>
<script src="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.min.js"></script>
</html>
